<script type="text/javascript">
    var countryCounter = 1;

    // Function to create a new field with a country dropdown and price input
    function createNewField() {
        var newField = `
            <div class="country-price-field">
                <div class="main_select_country_box">
                    <select name="country[]" class="form-select">
                        <option value="">Select a country</option>
                    </select>
                </div>
                <div class="price-input input-group">
                    <input type="text" name="price[]" placeholder="Enter price" class="form-control" />
                    <button type="button" class="btn btn-outline-danger remove-field input-group-text">
                        <i class="fa-solid fa-trash"></i>
                    </button>
                </div>
            </div>
        `;

        return newField;
    }

    // Function to toggle the visibility of the "Add Field" button and "Delete" buttons
    function toggleButtonVisibility() {
        const countrySelects = $("#country-fields-container select[name='country[]']");
        const priceInputs = $("#country-fields-container input[name='price[]']");
        const addButtons = $(".add-field_btn button.add_btn");
        const removeButtons = $(".add-field_btn button.remove-field");

        // Check if all select and input fields have non-empty values
        const allFieldsFilled = countrySelects.toArray().every(select => select.value !== "") &&
            priceInputs.toArray().every(input => input.value !== "");

        if (allFieldsFilled) {
            addButtons.show(); // Show the "Add Field" buttons when fields are filled
            removeButtons.hide(); // Hide all "Delete" buttons
        } else {
            addButtons.hide(); // Hide the "Add Field" buttons
            removeButtons.show(); // Show the "Delete" buttons for filled fields
        }
    }

    // Fetch country data for the initial dropdown
    const initialCountrySelect = $("#country-fields-container").find(".country-price-field select").first();
    fetch('https://restcountries.com/v3.1/all')
        .then(response => response.json())
        .then(data => {
            data.forEach(country => {
                const option = document.createElement('option');
                option.value = country.name.common;
                option.text = country.name.common;
                initialCountrySelect.append(option);
            });
        })
        .catch(error => console.error('Error fetching countries:', error));

    $("#add-country-field").click(function () {
        var newFieldHTML = createNewField();
        $("#country-fields-container").append(newFieldHTML);

        // Fetch country data for the newly created dropdown
        const newCountrySelect = $("#country-fields-container").find(".country-price-field select").last();
        fetch('https://restcountries.com/v3.1/all')
            .then(response => response.json())
            .then(data => {
                data.forEach(country => {
                    const option = document.createElement('option');
                    option.value = country.name.common;
                    option.text = country.name.common;
                    newCountrySelect.append(option);
                });
            })
            .catch(error => console.error('Error fetching countries:', error));

        countryCounter++;
        toggleButtonVisibility();
    });

    // Use event delegation to handle the click events for the "Delete" buttons
    $(document).on('click', '.remove-field', function () {
        $(this).closest('.country-price-field').remove();
        countryCounter--;
        toggleButtonVisibility();
    });

    // Monitor input fields for changes and toggle button visibility accordingly
    $("#country-fields-container").on('change', 'select[name="country[]"], input[name="price[]"]', function () {
        toggleButtonVisibility();
    });
</script>





